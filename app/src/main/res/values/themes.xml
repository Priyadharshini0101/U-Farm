<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UFarm" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#C4C4C4</item>
        <item name="colorPrimaryDark">#C4C4C4</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorSecondary">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

<style name="Splash_Screen">
    <item name="android:background">@drawable/ufarm1</item>
</style>
    <style name="Theme.UFarm.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.UFarm.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.UFarm.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>